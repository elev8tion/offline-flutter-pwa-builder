{
  "name": "offline-flutter-pwa-builder",
  "version": "1.0.0",
  "description": "MCP Server that generates production-ready, offline-first Progressive Web Applications built with Flutter",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "offline-flutter-pwa-builder": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "npm run test -- --watch",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "tools:doc": "node scripts/generate-tool-docs.mjs",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "flutter",
    "pwa",
    "offline-first",
    "drift",
    "wasm",
    "code-generation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "zod": "^3.22.4",
    "uuid": "^9.0.1",
    "ws": "^8.18.3",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0",
    "handlebars": "^4.7.8",
    "lodash": "^4.17.21",
    "simple-git": "^3.22.0",
    "tmp-promise": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.14.202",
    "typescript": "^5.3.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
